<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.addtask.AddTaskActivity"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/task_add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_title_input_hint"
            android:maxLines="1"
            android:inputType="text"
            android:autofillHints="taskTitle" />

        <EditText
            android:id="@+id/task_add_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_input_description_hint"
            android:maxLines="10"
            android:inputType="text|textMultiLine"
            android:autofillHints="taskTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="write something bab"
            android:id="@+id/can_save_indicator" />


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
